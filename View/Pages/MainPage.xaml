            <Button Content="1"
                    Style="{StaticResource BtnMain}"
                    Click="Button_Click"
                    Margin="0,5,0,0"/>

            <Button Content="2"
                    Style="{StaticResource BtnMain}"
                    Click="Button_Click_1"
                    Margin="0,5,0,0"/>
            <Button Content="3"
                    Style="{StaticResource BtnMain}"
                    Click="Button_Click_2"
                    Margin="0,5,0,0"/>
            <Button Content="4"
                   Style="{StaticResource BtnMain}"
                    Click="Button_Click_3"
                    Margin="0,5,0,0"/>
            <Button Content="5"
                    Style="{StaticResource BtnMain}"
                    Click="Button_Click_4"
                    Margin="0,5,0,0"/>
            <Button Content="6"
                    Style="{StaticResource BtnMain}"
                    Margin="0,5,0,0"
                    Click="Button_Click_5"/>
            <Button Content="7"
                    Style="{StaticResource BtnMain}"
                    Margin="0,5,0,0"
                    Click="Button_Click_6"/>
            <Button Content="8"
                    Style="{StaticResource BtnMain}"
                    Margin="0,5,0,0"
                    Click="Button_Click_7"/>
            <Button Content="9"
                    Style="{StaticResource BtnMain}"
                    Margin="0,5,0,0"
                    Click="Button_Click_8"/>
            <Button Content="10"
                    Style="{StaticResource BtnMain}"
                    Margin="0,5,0,0"
                    Click="Button_Click_9"/>
            <Button Content="11"
                    Style="{StaticResource BtnMain}"
                    Margin="0,5,0,0"
                    Click="Button_Click_10"/>
        </StackPanel>
    </Grid>
</Page>
